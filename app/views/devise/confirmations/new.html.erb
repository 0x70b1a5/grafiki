<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="button light">
    <h2> Resend confirmation email </h2>
    <p><%= f.email_field :email, autofocus: true, placeholder: "Email", class: "normalize-input", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %></p>
    <p><%= f.submit "Resend email", :class => "dark button" %></p>
  </div>
  <% end %>
  <div class='links'>
    <%= render "devise/shared/links" %>
  </div>
