<%= content_for :title do %> | sign in<% end %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="button light">
    <h2> Log in to Grafiki </h2>
    <p><%= f.email_field :email, autofocus: true, placeholder: "Email", class: "normalize-input" %></p>
    <p><%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "normalize-input" %></p>
    <% if devise_mapping.rememberable? -%>
        <p><%= f.submit "Sign in", :class => "dark button" %> <%= f.check_box :remember_me %> Remember me</p>
    <% end -%>
  </div>
<% end %>

<div class='links'>
  <%= render "devise/shared/links" %>
</div>
