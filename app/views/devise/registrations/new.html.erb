<%= content_for :title do %> | register<% end %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="button light">
    <h2> Welcome to Grafiki </h2>
    <p><%= f.email_field :email, autofocus: true, placeholder: "Email", class: "normalize-input" %></p>
    <p><%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "normalize-input" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password", class: "normalize-input" %></p>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    <p><%= f.submit "Sign up", :class => "dark button" %></p>
  </div>
<% end %>

  <div class='links'>
    <%= render "devise/shared/links" %>
  </div>
</div>
