<%= @bounties.each do |bounty| %>
<div class="nox">
  <div class="row">
    <div class="num">
      <%= bounty.amount %> BTC
    </div>

    <div class="tyt">
      <%= bounty.title %>
    </div>

    <div class="loc">
      <%= bounty.lat %>, <%= bounty.lng %>
    </div>

    <div class="wut">
      <%= bounty.description %>
    </div>

    <div class="wut">
      commissioned by <%= bounty.patron || 'anonymous' %>
    </div>
  </div>

  <a href="bounties/<%= bounty.id %>/fill"><div class="row fill">fill</div></a>

  <div class="row tic">
    <%= bounty.votes.count %>
  </div>
  <%= button_to '+want', vote_bounty_path(bounty), method: :post, class: "row" %>

    <%= link_to 'edit', edit_bounty_path(bounty) %>
    <%= link_to 'kill', bounty_path(bounty),
      method: :delete, 
      data: { confirm: 'u sure?' } %>
</div>
<%end%>
