<%= content_for :title do %> | upload<% end %>
<div id="page">
<%= form_for @bounty do |f| %>
  <% if @bounty.errors.any? %>
    <%= pluralize(@bounty.errors.count, "error") %> must be fixed. 
    <ul> 
      <% @bounty.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="box">
  <div class="in-float">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: 'name your artwork' %>
  </div>
  </div>

  <div class="box">
  <div class="in-float" id="b-f-d">
    <%= f.label :description %>
    <%= f.text_area :description, 
      placeholder: 'a summary of the contents and story or your artwork' %>
  </div>
  </div>

  <div class="box">
  <div class="in-float">
    <%= f.label :location %>
    <%= f.number_field :lat, :class => 'text_field', :step => 0.000001, placeholder: 'latitude' %>
    <%= f.number_field :lng, :class => 'text_field', :step => 0.000001, placeholder: 'longitude' %>
  </div>
  </div>

  <div class="box">
  <div class="in-float">
  <%= f.label :artist_name %>
  <%= f.text_field :artist, placeholder: 'your name and/or tag' %>
  </div>
  </div>

  <div class="box">
  <div class="in-float">
  <%= f.label :image_url %>
  <%= f.text_field :pic, placeholder: 'http://external.url/of/image.png' %>
  </div>
  </div>

  <div class="box">
  <div class="in-float">
  <%= f.label :bitcoin_address %>
  <%= f.text_field :address, placeholder: 'your bitcoin address' %>
  </div>
  </div>

  <div class="box">
  <div class="in-float" style="background: #334">
  <%= button_to 'upload art', upload_bounties_path(@bounty), method: :post %>
  </div>
  </div>

<% end %>
